<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="text-center">
    <h1 class="mb-4">City Search</h1>
    <%= form_tag('/cities/search', method: :get) do %>
      <div class="input-group">
        <%= text_field_tag :state, params[:state], class: "form-control", placeholder: "Enter state name" %>
        <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "Enter part of city name"%>
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    <% end %>
  </div>
</div>